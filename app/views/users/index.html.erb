<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render'books/new', user: current_user, book: @new_book%>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2 class="mb-1">Books</h2>
  
      <table class="table">
        <thead style="padding:12px;">
          <th>image</th>
          <th>name</th>
          <th></th>
          <th colspan="3"></th>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= image_tag user.get_profile_image(100, 100) %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>